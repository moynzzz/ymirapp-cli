{
    "name": "ymirapp/cli",
    "description": "Ymir command-line tool",
    "type" : "project",
    "license": "MIT",
    "authors" : [
        {
            "name": "Carl Alexander",
            "email": "support@ymirapp.com",
            "homepage": "https://ymirapp.com"
        }
    ],
    "bin": [
        "ymir"
    ],
    "require": {
        "php": "^7.2 || ^8.0",
        "ext-json": "*",
        "ext-zip": "*",
        "guzzlehttp/guzzle": "^7.0",
        "league/flysystem": "^2.0",
        "league/flysystem-ftp": "^2.0",
        "league/flysystem-sftp": "^2.0",
        "nesbot/carbon": "^2.40",
        "phpseclib/phpseclib": "^2.0.31",
        "symfony/config": "^4.4",
        "symfony/console": "^4.4",
        "symfony/dependency-injection": "^4.4",
        "symfony/event-dispatcher": "^4.4",
        "symfony/filesystem": "^4.4",
        "symfony/finder": "^4.4",
        "symfony/process": "^4.4",
        "symfony/yaml": "^4.4",
        "tightenco/collect": "^8.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.16",
        "php-parallel-lint/php-parallel-lint": "^1.1",
        "phpmd/phpmd": "^2.7",
        "phpro/grumphp": "^0.19 || ^1.0",
        "phpstan/phpstan": "^0.12.0",
        "sebastian/phpcpd": "^4.1 || ^5.0 || ^6.0"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Ymir\\Cli\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Ymir\\Cli\\Tests\\": "tests"
        }
    }
}
